}

@model List<StudentPortal.Models.Entities.Student>

    <h1>Students</h1>
    
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <th>@student.Id</th>
                <th>@student.Name</th>
                <th>@student.Email</th>
                <th>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                </th>
            </tr>
        }
        </tbody>
    </table>